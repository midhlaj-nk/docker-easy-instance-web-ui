# Easy Instance Frontend - Environment Variables
# Backend URL for direct API calls (no proxy)
NEXT_PUBLIC_BACKEND_URL=https://web.easyinstance.com
NEXT_PUBLIC_API_VERSION=v1

# JWT Configuration (should match backend)
NEXT_PUBLIC_JWT_EXPIRATION_HOURS=24

# Application Configuration
NEXT_PUBLIC_APP_NAME=Easy Instance
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_AUTO_REFRESH=true

# Refresh Intervals (in milliseconds)
NEXT_PUBLIC_METRICS_REFRESH_INTERVAL=30000
NEXT_PUBLIC_INSTANCES_REFRESH_INTERVAL=60000

# Production Environment
NODE_ENV=production
